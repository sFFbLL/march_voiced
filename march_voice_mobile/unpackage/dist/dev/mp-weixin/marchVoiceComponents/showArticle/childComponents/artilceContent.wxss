
.article-content {
	margin-top: 18rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	font-size: 27rpx;
	font-family: PingFangSC;
	color: #404040;
}
.article-text {
	display: inline-block;
}
.article-img {
	display: inline-block;
	margin-left: 30rpx;
}
.article-img image {
	width: 170rpx;
	height: 130rpx;
	background-color: rgba(238, 238, 238, 1);
	border-radius: 4px;
}

