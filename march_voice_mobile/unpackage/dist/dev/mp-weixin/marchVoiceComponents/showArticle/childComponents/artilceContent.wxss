
.article-content {
	margin-top: 18rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	font-size: 28rpx;
	font-family: PingFangSC;
	color: #404040;
}
.article-text {
	overflow: hidden;
	-webkit-line-clamp: 3;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	line-height: 150%;
}
.article-img {
	display: inline-block;
	margin-left: 30rpx;
}
.article-img image {
	width: 170rpx;
	height: 100%;
	background-color: rgba(238, 238, 238, 1);
	border-radius: 4px;
}

