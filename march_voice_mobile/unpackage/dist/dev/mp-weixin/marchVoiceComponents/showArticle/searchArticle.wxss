
.search-article-item {
	padding: 20rpx 0;
	overflow: hidden;
	border-bottom: 1px solid #f0f0f0;
}
 .article-title {
	line-height: 100%;
}
 .article-title .article-text {
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
}
 .article-content {
	color: #999;
	font-size: 24rpx;
	margin-top: 10rpx;
}
 .article-interact {
	font-size: 20rpx;
	margin-top: 10rpx;
}
 .interact-item uni-text {
	margin-left: 4rpx;
}
 .point {
	visibility: hidden;
}
.nickname {
	display: inline-block;
	padding-right: 20rpx;
	max-width: 200rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	line-height: 100%;
}
.time{
	float: right;
	margin-right: 20rpx;
}

